<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_purchase_order_summary_document_group_by_vendor">
   <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context({})"/>
        <div class="page">
        	<div align="center">
					<h2>Purchase Order Summary</h2>
            </div>
            <br/>
            <br/>
            <div>
               <strong>Report Date:</strong>
               <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y')"/>
           </div>
            <t t-foreach="o.get_data()" t-as="item">
                 <div>
	               <strong>Vendor Name</strong>
	               <span t-esc="item.name"/>
	           	</div>
	           	 <br/>
				<table class="table table-condenced" style="page-break-inside:avoid">
					<thead>
			
			
						<tr>
						<th>Purchase Order</th>
							<th>Project:</th>
							<th>Sub Project:</th>
							<th>Project WBS:</th>
							<th>Product:</th>
							<th>Quantity</th>
							<th>Taxes</th>
							<th>Unit Price</th>
							<th>Net Price</th>
							
							
							
						</tr>
					</thead>
					<tbody>
						<t t-foreach="item_value" t-as="po">
						<tr t-foreach="po.order_line" t-as="po_line">
							<td class="text-right">
								<t t-esc="po_line.order_id.name"/>
							</td>
							
							<td class="text-right">
								<t t-esc="po_line.order_id.project_wbs.name"/>
							</td>
							
							<td class="text-right">
								<t t-esc="po_line.order_id.sub_project.name"/>
							</td>
							
							<td class="text-right">
								<t t-esc="po_line.order_id.project_wbs.name"/>
							</td>
							
							<td class="text-right">
								<t t-esc="po_line.product_id.name"/>
							</td>
							
							<td class="text-right">
								<span t-esc="po_line.product_qty"/>
								 <span t-field="po_line.product_uom.name" groups="product.group_uom"/>
							</td>
							
							<td>
		                            <span t-esc="', '.join(map(lambda x: x.name, po_line.taxes_id))"/>
		                            <!-- <t t-set="tax_sum" t-value="tax_sum+" -->
	                        </td>

							<td class="text-center">
								<span t-field="po_line.price_unit"/>
							</td>
							<td class="text-center">
								<span t-field="po_line.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;False&quot;}"/>
							</td>
							
						</tr>
						</t>
					</tbody>
				</table>
            </t>
           </div>
           </t>
           </template>
           



<template id="report_purchase_order_summary_document">
   <t t-call="web.external_layout">
    <t t-set="p" t-value="1" />
        <t t-set="o" t-value="o.with_context({})"/>
        <div class="page">
        	<div align="center">
					<h2>Purchase Order Summary</h2>
            </div>
            <br/>
            <br/>
            <div>
               <strong>Report Date:</strong>
               <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y')"/>
           </div>
           <br/>
            <t t-set="project_id" t-value="0"/>
            <t t-set="sub_project_id" t-value="0"/>
            <t t-set="project_wbs_id" t-value="0"/>
            <t t-set="partner_id" t-value="0"/>
        	<tr t-foreach="o.order_line" t-as="wizard_line">
        		<tr t-foreach="wizard_line.purchase_order_id" t-as="po_obj">
		            <div class="oe_structure"/>
		            	<div class="row">
			                <div class="col-xs-4 ">
			                	<!-- <t t-if="project_id &lt;&gt; po_obj.project_id.id"> -->
				                	<div t-if="po_obj.project_id">
				                		<strong>Project:</strong>
				                		<span t-field="po_obj.project_id"/> 
	                      				<!-- <t t-set="project_id" t-value="po_obj.project_id.id"/>  -->
				                	</div>
			                	<!-- </t>
			                	<t t-if="sub_project_id &lt;&gt; po_obj.sub_project.id"> -->
				               		<div t-if="po_obj.sub_project">
				               		   <strong>Sub Project:</strong>
				                       <span  t-field="po_obj.sub_project"/>
				                       <!-- <t t-set="sub_project_id" t-value="po_obj.sub_project.id"/>  -->
				               		</div >
			               		<!-- </t>
			               		<t t-if="project_wbs_id &lt;&gt; po_obj.project_wbs.id"> -->
				               		<div t-if="po_obj.project_wbs">
				               		   <strong>Project WBS:</strong>
				                       <span  t-field="po_obj.project_wbs"/>
				                       <!-- <t t-set="project_wbs_id" t-value="po_obj.project_wbs.id"/>  --> 
				               		</div>
			               		<!-- </t> -->
			               	</div>
		                	<div class="col-xs-4 col-xs-offset-4">
		                		<!-- <t t-if="partner_id &lt;&gt; po_obj.partner_id.id"> -->
			                		<div t-if="po_obj.partner_id" >
					                    <strong>Vendor:</strong>
					                    <span  t-field="po_obj.partner_id"/>
					                    <!-- <t t-set="partner_id" t-value="po_obj.partner_id.id"/>   -->
					                     
					                </div>
				                <!-- </t> -->
			               		<div t-if="o.from_date">
			               		<strong>From Date:</strong>
			                       <span  t-field="o.from_date"/> 
			               		</div>
			               		<div t-if="o.to_date">
			               		<strong>To Date:</strong>
			                       <span  t-field="o.to_date"/> 
			               		</div>
		                	</div>
		            	</div>
		            <br/>
            		<br/>
				   	<table class="table table-condenced">
		                <thead>
		                    <tr>
		                    	<th class="text-center"><strong>Purchase Order</strong></th>
		                        <th class="text-center"><strong>Product</strong></th>
		                        <th class="text-center"><strong>Date Required</strong></th>
		                        <th class="text-center"><strong>Quantity</strong></th>
		                        <th class="text-center"><strong>Taxes</strong></th>
		                        <th class="text-center"><strong>Unit Price</strong></th>
		                        <th class="text-center"><strong>Net Price</strong></th>
		                    </tr>
		                </thead>
		                <tbody>
		                    <tr t-foreach="po_obj.order_line" t-as="line">
		                        <td class="text-center">
			                       <span  t-field="po_obj.name"/> 
			               		</td>
		                        <td class="text-center">
		                            <span t-field="line.name"/>
		                        </td>
		                        <td class="text-center">
		                            <span t-field="line.date_planned"/>
		                        </td>
		                        <td class="text-center">
		                            <span t-field="line.product_qty"/>
		                            <span t-field="line.product_uom.name" groups="product.group_uom"/>
		                        </td>
		                         <td>
		                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
		                        </td>
		                        <td class="text-center">
		                            <span t-field="line.price_unit"/>
		                        </td>
		                        <td class="text-center">
		                            <span t-field="line.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;False&quot;}" />
		                        </td>
		                    </tr>
		                </tbody>
		            </table>
					<div class="row float-right">
		                	<div class="col-xs-6 pull-right">
		                    <table class="table table-condensed">
		                        <tr class="border-black">
		                            <td><strong>Total Without Taxes:</strong>
		                                <span t-field="po_obj.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;False&quot;}" />
		                            </td>
		                            <td><strong>Taxes:</strong>
		                                <span t-field="po_obj.amount_tax" t-field-options="{&quot;widget&quot;: &quot;False&quot;}" />
		                            </td>
		                            <td><strong>Total:</strong>
		                                <span t-field="po_obj.amount_total" t-field-options="{&quot;widget&quot;: &quot;False&quot;}" />
		                            </td>
		                        </tr>
		                    </table>
		                </div>
		            </div>
		            <p t-field="po_obj.notes"/>
		            <div class="oe_structure"/>
            	</tr>
            	<!-- <p style="page-break-after:always;">   </p> -->
            </tr>
        </div>
    </t>
</template>

<template id="report_purchase_order_summary_group_by_vendor">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="pragtech_purchase.report_purchase_order_summary_document_group_by_vendor" />
        </t>
    </t>
</template>

<template id="report_purchase_order_summary">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="pragtech_purchase.report_purchase_order_summary_document" />
        </t>
    </t>
</template>

</data>
</odoo>

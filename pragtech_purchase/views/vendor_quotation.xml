<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="vendor_quotation_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.tree</field>
            <field name="model">vendor.quotation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Reference"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"
                           options="{'no_create':
		True}"/>
                    <field name="origin"/>
                    <field name="amount_untaxed"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="vendor_quotation_line_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.line.tree</field>
            <field name="model">vendor.quotation.line</field>
            <field name="arch" type="xml">
                <tree string="Vendor Quotation Lines" create="false">
                    <field name="order_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Vendor"/>
                    <field name="product_id"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="product.group_uom"/>
                    <field name="price_subtotal" widget="monetary"/>
                    <field name="date_planned" widget="date"/>
                </tree>
            </field>
        </record>
        <record id="vendor_quotation_form" model="ir.ui.view">
            <field name="name">vendor.quotation.form</field>
            <field name="model">vendor.quotation</field>
            <field name="arch" type="xml">
                <form string="Vendor Quotation">
                    <header>
                        <button name="change_state" type="object" string="Change Stage"
                                class="oe_highlight" attrs="{'invisible': [('state','not in','draft')]}"/>
                        <field name="state" readonly="1" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <!--<field name="partner_id" domain="[('supplier','=',True),('vendor_status','in',('approved','trial'))]"-->
                            <!--context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0}" />-->
                            <field name="partner_id"
                                   domain="[('vendor_status','in',('approved','trial'))]"
                                   context="{'search_default_supplier':1, 'default_supplier':1, 'default_customer':0, 'res_partner_search_mode': 'supplier'}"/>
                            <field name="partner_ref"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                            <field name="use_in_quotation" invisible="1"/>
                            <field name="stage_id"/>
                        </group>
                        <group>
                            <field name="date_order"/>
                            <field name="origin" attrs="{'invisible':
		[('origin','=',False)]}"/>
                            <field name="company_id" groups="base.group_multi_company"
                                   options="{'no_create': True}"/>
                            <field name="valid_till"/>
                            <field name="flag" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vendor Quotation">
                            <field name="order_line">
                                <tree string="Vendor Quotation Details">
                                    <field name="product_category"/>
                                    <field name="product_id" context="{'partner_id': parent.partner_id}"/>
                                    <field name="product_uom"/>
                                    <field name="price_unit"/>
                                    <field name="product_qty"/>
                                    <!-- <field name="product_uom" groups="product.group_uom"/> <field
                                        name="price_unit"/> <field name="basic_amount"/> -->
                                    <field name="discount"/>
                                    <field name="price_subtotal"/>
                                    <field name="taxes_id" widget="many2many_tags"
                                           domain="[('type_tax_use','=','purchase')]" context="{'default_type_tax_use':
		'purchase'}"/>
                                    <field name="taxed_amount"/>
                                    <field name="company_id" groups="base.group_multi_company"
                                           options="{'no_create': True}"/>
                                    <field name="account_analytic_id" context="{'default_partner_id':parent.partner_id}"
                                           groups="purchase.group_analytic_accounting" invisible="1"/>
                                    <field name="net_rate"/>
                                </tree>
                                <form string="Vendor
		Quotation Line">
                                    <group>
                                        <group>
                                            <field name="product_category"/>
                                            <field name="product_id" context="{'partner_id': parent.partner_id}"/>
                                            <label for="product_qty"/>
                                            <div>
                                                <field name="product_qty" class="oe_inline"/>
                                                <span class="oe_inline">
                                                </span>
                                                <field name="product_uom" groups="product.group_uom"
                                                       class="oe_inline"/>
                                            </div>
                                            <field name="price_unit"/>
                                            <field name="negotiated_rate"/>
                                            <field name="discount"/>
                                        </group>
                                        <group>
                                            <field name="taxes_id" widget="many2many_tags"
                                                   domain="[('type_tax_use', '=', 'purchase')]"/>
                                            <field name="currency_id"/>
                                            <field name="brand_id"/>
                                            <field name="company_id" groups="base.group_multi_company"
                                                   options="{'no_create': True}"/>
                                            <field name="credit_period"/>
                                            <field name="currency_rate"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <group class="oe_subtotal_footer
		oe_right">
                                <field name="amount_untaxed" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <field name="amount_tax" widget="monetary"
                                       options="{'currency_field':
		'currency_id'}"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1"
                                       class="oe_subtotal_footer_separator" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <notebook>
                                <page string="Audit Trail">
                                    <group colspan="4" col="4">
                                        <group>
                                            <div>
                                                <field name="mesge_ids" nolabel="1">
                                                    <tree create="false">
                                                        <field name="date"/>
                                                        <field name="author_id"/>
                                                        <field name="to_stage"/>
                                                        <field name="remark"/>
                                                        <field name="res_id" invisible="1"/>
                                                        <field name="model" invisible="1"/>
                                                        <field name="is_use" invisible="1"/>
                                                    </tree>
                                                </field>
                                            </div>
                                        </group>
                                        <group>
                                            <div>
                                            </div>
                                        </group>
                                    </group>
                                </page>
                            </notebook>
                        </page>
                        <page string="Other Info">
                            <group colspan="4" col="4">
                                <field name="payment_term_id"/>
                                <field name="transport_amount"/>
                                <field name="loading_charges"/>
                                <field name="unloading_charges"/>
                                <field name="other_charges"/>
                                <field name="delivery_schedule"/>
                                <field name="host_name"/>
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>
        <record id="vendor_quotation_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.tree</field>
            <field name="model">vendor.quotation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Reference"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"
                           options="{'no_create': True}"/>
                    <field name="origin"/>
                    <field name="amount_untaxed"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="vendor_quotation_search" model="ir.ui.view">
            <field name="name">vendor.quotation.search</field>
            <field name="model">vendor.quotation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Reference"/>
                    <field name="partner_id"/>
                    <field name="origin"/>

                    <filter string="Draft" name="draft" domain="[('stage_id.draft','=',True)]"/>
                    <filter string="Not Draft" name="not draft" domain="[('stage_id.draft','=',False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Vendor" name="partner_id" context="{'group_by':'partner_id'}"/>
                        <filter string="State" name="state" context="{'group_by':'state'}"/>

                    </group>
                </search>
            </field>
        </record>


        <record id="vendor_quotation_line_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.line.tree</field>
            <field name="model">vendor.quotation.line</field>
            <field name="arch" type="xml">
                <tree string="Vendor Quotation Lines" create="false">
                    <field name="order_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Vendor"/>
                    <field name="product_id"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="product.group_uom"/>
                    <field name="price_subtotal" widget="monetary"/>
                    <field name="date_planned" widget="date"/>
                </tree>
            </field>
        </record>
        <record id="vendor_quotation_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.tree</field>
            <field name="model">vendor.quotation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Reference"/>
                    <field name="date_order"/>
                    <field name="partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"
                           options="{'no_create': True}"/>
                    <field name="origin"/>
                    <field name="amount_untaxed"/>
                    <field name="amount_total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="vendor_quotation_line_tree" model="ir.ui.view">
            <field name="name">vendor.quotation.line.tree</field>
            <field name="model">vendor.quotation.line</field>
            <field name="arch" type="xml">
                <tree string="Vendor Quotation Lines" create="false">
                    <field name="order_id"/>
                    <field name="name"/>
                    <field name="partner_id" string="Vendor"/>
                    <field name="product_id"/>
                    <field name="price_unit"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="product.group_uom"/>
                    <field name="price_subtotal" widget="monetary"/>
                    <field name="date_planned" widget="date"/>
                </tree>
            </field>
        </record>
        <record id="vendor_quotation_id" model="ir.actions.act_window">
            <field name="name">Vendors Quotation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vendor.quotation</field>
            <field name="domain">[('state','in',('draft','confirm'))]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Click to create a vendor quotation.</p>
                <p>The vendor quotation is the quotation of vendor.</p>
            </field>
        </record>
        <menuitem action="vendor_quotation_id" id="menu_vendor_quotation"
                  parent="purchase.menu_procurement_management" sequence="0"/>
        <!-- End Vendor Quotation -->
    </data>
</odoo>
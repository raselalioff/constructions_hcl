<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_travel_template">
			<t t-call="web.external_layout">
				<t t-set="doc" t-value="doc.with_context({})" />
				<div class="page">

                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
					<h2><b><span t-field="doc.name"/> - <span t-field="doc.state"/></b></h2>
					<table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;height:50%;">
                        <td><strong >Employee</strong> </td>
                        <td><span t-field="doc.employee_id.name"/></td>

                        <td><strong >Department</strong> </td>
                        <td><span t-field="doc.department_id.name"/></td>
                        
                        
                    </tr>
                    
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">
                    	<td><strong >Manager</strong> </td>
                        <td><span t-field="doc.department_manager_id.name" /></td>

                        <td><strong >Job Position</strong> </td>
                        <td><span t-field="doc.job_id.name" /></td>
                        
                        
                        
                    </tr>
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >Request By</strong> </td>
                        <td><span t-field="doc.request_by.name" /></td>

                        <td><strong >Request Date</strong> </td>
                        <td><span t-field="doc.req_date" /></td>
                        
                        
                        
                    </tr>
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >Confirm By</strong> </td>
                        <td><span t-field="doc.confirm_by.name" /></td>

                        <td><strong >Confirm Date</strong> </td>
                        <td><span t-field="doc.confirm_date" /></td>
                        
                        
                        
                    </tr>

                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >Approve By</strong> </td>
                        <td><span t-field="doc.approve_by.name" /></td>

                        <td><strong >Approve Date</strong> </td>
                        <td><span t-field="doc.approve_date" /></td>
                        
                        
                        
                    </tr>
                    
                    
                </table>
                <br/>

                <h2><b>Travel Request Information</b></h2>
                
            	<table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;height:50%;">
                        <td><strong >Travel Purpose</strong> </td>
                        <td><span t-field="doc.travel_purpose"/></td>

                        <td><strong >Project </strong> </td>
                        <td><span t-field="doc.project_id.name"/></td>
                        
                        
                    </tr>
                    
                    
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >From</strong> </td>
                        <td><span t-field="doc.from_city" /><span>,</span><span t-field="doc.from_state_id.name" /><span>,</span><span t-field="doc.from_country_id.name" /></td>

                        <td><strong >To </strong> </td>
                        <td><span t-field="doc.to_street" /><span>,</span><span t-field="doc.to_street_2" /><span>,</span><span t-field="doc.to_city" /><span>,</span><span t-field="doc.to_state_id.name" /><span>,</span><span t-field="doc.to_country_id.name" />
                    </td>
                        
                        
                        
                    </tr>
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong>Request Departure Date</strong> </td>
                        <td><span t-field="doc.req_departure_date" /></td>

                        <td><strong >Request Return Date </strong> </td>
                        <td><span t-field="doc.req_return_date" /></td>
                        
                        
                        
                    </tr>

                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >Request Mode Of Travel  </strong> </td>
                        <td><span t-field="doc.req_travel_mode_id.name" /></td>

                        <td><strong >Days </strong> </td>
                        <td><span t-field="doc.days" /></td>
                        
                        
                        
                    </tr>
                    
                    
                </table>
                <br/>

                <h2><b>Other Info</b></h2>

                <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;height:50%;">
                        <td><strong >Available Departure Date </strong> </td>
                        <td><span t-field="doc.available_departure_date"/></td>

                        <td><strong >Available Return Date</strong> </td>
                        <td><span t-field="doc.available_return_date"/></td>
                        
                        
                    </tr>
                    
                    
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong >Departure Mode Of Travel</strong> </td>
                        <td><span t-field="doc.departure_mode_travel_id.name" /></td>

                        <td><strong >Return Mode Of Travel</strong> </td>
                        <td><span t-field="doc.return_mode_travel_id.name" /></td>
                        
                        
                        
                    </tr>
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;">

                    	<td><strong>Visa Agent</strong> </td>
                        <td><span t-field="doc.visa_agent_id.name" /></td>

                        <td><strong >Ticket Booking Agent</strong> </td>
                        <td><span t-field="doc.ticket_booking_agent_id.name" /></td>
                        
                        
                        
                    </tr>

                    
                    
                </table>
                <br/>
                
                <br/>
                <br/>
                <br/>
                <br/>
                    <br/>
                <h2><b>Accounting Info</b></h2>
                <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: left;border-top: 1px solid #ddd;height:50%;">
                        <td><strong >Bank Name</strong> </td>
                        <td><span t-field="doc.bank_id.name"/></td>

                        <td><strong >Cheque Number</strong> </td>
                        <td><span t-field="doc.cheque_number"/></td>
               	 </tr>
     
                </table>
                <br/>
                <br/>

                 <h2><b>Advance Payment Request</b></h2>

                 <table class="table table-condensed">
							<thead style="border: 5px solid #ddd;">
								<tr class="text-center">
									<th>Name</th>
									<th>Description</th>
									<th>Unit Price</th>
									<th>Quantity</th>
									<th>Sub Total</th>
									
								</tr>
							</thead>
							<t t-set="current_subtotal" t-value="0"/>
							<tbody>
								<tr t-foreach="doc.advance_payment_ids" t-as="line" class="text-center">
										<td>
											<span t-esc="line.product_id.name" />
										</td>
										<td>
											<span t-esc="line.name" />
										</td>
										<td>
											<span t-esc="line.unit_amount" />
										</td>
										<td >
											<span t-esc="line.quantity" />
										</td>
										<td >
											<span t-esc="line.total_amount" />
										</td>
										<t t-set="current_subtotal" t-value="current_subtotal + line.total_amount" />
										
								</tr>
								<tr class="is-subtotal text-center">
								<td></td>
								<td></td>
								<td></td>
								<td></td>
                                <td t-att-colspan="colspan">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        
                                    />
                                </td>
                               </tr>
							</tbody>
						</table>
						<br/>

				<h2><b>Expenses</b></h2>


				<table class="table table-condensed">
							<thead style="border: 5px solid #ddd;">
								<tr class="text-center">
									<th>Date</th>
									<th>Name</th>
									<th>Description</th>
									<th>Unit Price</th>
									<th>Quantity</th>
									<th>Sub Total</th>
									
								</tr>
							</thead>
							<t t-set="current_subtotal" t-value="0"/>
							<tbody>
								<tr t-foreach="doc.expense_ids" t-as="line" class="text-center">


										<td>
											<span t-esc="line.date" />
										</td>
										<td>
											<span t-esc="line.product_id.name" />
										</td>
										<td>
											<span t-esc="line.name" />
										</td>
										<td>
											<span t-esc="line.unit_amount" />
										</td>
										<td >
											<span t-esc="line.quantity" />
										</td>
										<td >
											<span t-esc="line.total_amount" />
										</td>
										<t t-set="current_subtotal" t-value="current_subtotal + line.total_amount" />
										
								</tr>
								
								<tr class="is-subtotal text-center">
								<td></td>
								<td></td>
								<td></td>
								<td></td>
								<td></td>
                                <td t-att-colspan="colspan">
                                    <strong class="mr16">Subtotal</strong><span t-esc="current_subtotal"/>
                                    
                                </td>
                               </tr>
							</tbody>
						</table>


				</div>
			</t>
		</template>

		<template id="report_travel">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="doc">
					<t t-call="bi_employee_travel_managment.report_travel_template"  />
				</t>
			</t>
		</template>
	</data>
</openerp>

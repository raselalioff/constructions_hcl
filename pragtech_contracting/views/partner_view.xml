<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_partner_bank_form_inherited" model="ir.ui.view">
			<field name="name">partner.bank.account.inherited</field>
			<field name="model">res.partner.bank</field>
			<field name="inherit_id" ref="base.view_partner_bank_form" />
			<field name="arch" type="xml">

				<xpath expr="/form/sheet/group/group/field[@name='acc_number']" position="after">
					<field name="partner_id" readonly="1" />
				</xpath>
				<xpath expr="/form/sheet/group/group/field[@name='company_id']" position="replace">
					<field name="company_id" groups="base.group_multi_company"
						options="{'no_create': True}" readonly="1" />
				</xpath>
				<xpath expr="/form/sheet/group" position="after">
					<notebook>
						<page string="Audit Trail">
							<field name="mesge_ids">
								<tree>
									<field name="date" />
									<field name="create_uid" />
									<field name="write_uid" />
									<field name="remark" />
								</tree>
							</field>
						</page>
					</notebook>
				</xpath>
			</field>
		</record>

		<record id="act_res_partner_work_order" model="ir.actions.act_window">
			<field name="name">Work Orders</field>
			<field name="res_model">work.order</field>
			<field name="view_mode">tree,form,graph</field>
			<field name="domain">[('partner_id','=',active_id)]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					This contractor has no work order. Click to create a new
					WO.
				</p>
				<p>
					Creating requisition is the first step of the work order flow.
					Once
					converted into a work order.
				</p>
			</field>
		</record>
		<record id="act_res_partner_ra_bill" model="ir.actions.act_window">
			<field name="name">RA Bill</field>
			<field name="res_model">ra.bill</field>
			<field name="view_mode">tree,form,graph</field>
			<field name="context">{'search_default_contractor_id': active_id}</field>
			<field name="domain">[('contractor_id','=',active_id)]</field>
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					This contractor has no work order. Click to create a new
					WO.
				</p>
				<p>
					Creating requisition is the first step of the work order flow.
					Once
					converted into a work order.
				</p>
			</field>
		</record>
		<record id="view_res_partner_form_inherited1" model="ir.ui.view">
			<field name="name">view.partner.form.inherited</field>
			<field name="model">res.partner</field>
			<field name="inherit_id" ref="base.view_partner_form" />
			<field name="arch" type="xml">
				<xpath expr="/form/sheet/div[1]" position="before">
					<div class="oe_button_box" name="button_box">
						<button class="oe_stat_button"
							name="%(pragtech_contracting.act_res_partner_work_order)d" type="action"
							attrs="{'invisible': [('contractor', '=', False)]}" icon="fa-shopping-cart">
							<field string="Workorders" name="work_order_count" widget="statinfo" />
						</button>
						<button class="oe_stat_button"
							name="%(pragtech_contracting.act_res_partner_ra_bill)d" type="action"
							attrs="{'invisible': [('contractor', '=', False)]}" icon="fa-shopping-cart">
							<field string="RA Bill" name="contractor_bill_count"
								widget="statinfo" />
						</button>
					</div>
				</xpath>

				<xpath
					expr="/form/sheet/notebook/page[@name='sales_purchases']/group/group[@name='sale']"
					position="replace">
				</xpath>
<!--				<xpath-->
<!--					expr="/form/sheet/notebook/page[@name='sales_purchases']/group/group[@name='sale']"-->
<!--					position="replace">-->
<!--				</xpath>-->
				<xpath expr="/form/sheet/group" position="after">
					<group colspan="4" col="4">
						<group string="Sale" name="sale">
							<field name="user_id"
								context="{'default_groups_ref': ['base.group_partner_manager']}" />
						</group>
						<group string="Contractor" name="contractor">
							<field name="contractor" />
						</group>
					</group>
				</xpath>

				<xpath expr="//page[@name='internal_notes']" position="after">
					<page string="Contractor Information" attrs="{'invisible':[('contractor','!=',True)]}">
						<group colspan="4" col="4">
							<field name="cst_no" />
							<field name="vat_no" />
							<field name="pan_no" />
							<field name="service_tax_no" />
							<field name="weekly_off" />
							<field name="credit_capacity" />
							<field name="grading" />
							<field name="primary_supplier" />
							<field name="organization_type" />
							<field name="contractor_status"  />
							<field name="status_remark" />
							<field name="trial_allowed" attrs="{'invisible':[('contractor_status','!=','trial')]}"/>
							<field name="turn_over" />
							<field name="trial_used" attrs="{'invisible':[('contractor_status','!=','trial')]}"/>
							<field name="number_of_employees" />
							<field name="inbusiness_since" />
							<field name="registration_date" />
							<field name="esic_no" attrs="{'invisible':[('contractor','!=',True)]}" />
							<field name="lwmf_no" attrs="{'invisible':[('contractor','!=',True)]}" />
							<field name="wct_no" attrs="{'invisible':[('contractor','!=',True)]}" />
							<field name="shop_act_no" attrs="{'invisible':[('contractor','!=',True)]}" />
							<field name="shop_act_expiry_date" attrs="{'invisible':[('contractor','!=',True)]}" />
							<field name="pf_code_registration_no" attrs="{'invisible':[('contractor','!=',True)]}" />

						</group>

						<!-- <separator string="Material Categories"/> <field name="categ_ids"/> -->
						<separator string="Category Information" />
						<group colspan="4" col="4">
							<field name="labour_category" attrs="{'invisible':[('contractor','!=',True)]}"
								widget="many2many_tags" />
							<!-- <field name="material_category" attrs="{'invisible':[('supplier','!=',True)]}"
								widget="many2many_tags" /> -->
						</group>

					</page>

					<page string="Documents">
						<field name="attachment_line_ids" />
					</page>

				</xpath>
			</field>
		</record>


		<record id="action_partner_contractor_form" model="ir.actions.act_window">
			<field name="name">Contractor</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="domain">[('contractor','=',1)]</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'search_default_contractor': 1,'default_contractor': 1}</field>
			<field name="filter" eval="True" />
			<field name="help" type="html">
				<p class="oe_view_nocontent_create">
					Click to add a contact in your address book.
				</p>
				<p>
					Odoo helps you easily track all activities related to
					a
					contractor: discussions, history of Work orders,
					documents, etc.
				</p>
			</field>
		</record>

		<menuitem id="main_menu_contractor" name="Contractor" parent="contracting_menu"
			sequence="1" />
		<menuitem id="menu_contractor" name="Contractor" parent="main_menu_contractor"
			action="action_partner_contractor_form" sequence="1" />

	</data>
</odoo>



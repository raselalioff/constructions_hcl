<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_grn_document">
   <t t-call="web.external_layout">
    <t t-set="p" t-value="1" />
        <t t-set="o" t-value="o.with_context({})"/>
        <div class="page">
            <div class="oe_structure"/>
            <div class="row">
              <div align="center">
              
                <h2 >Unbilled Service GRN Report</h2>
                </div>
            <div >
                <div >
                    <strong>Report Date:</strong>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%m/%d/%Y')"/>
                </div>
            </div>
            
           
            <![CDATA[&nbsp;]]>
            <t t-set="Projectwbs" t-value="0" />
              <t t-foreach="o.order_line" t-as="line">
            
            <table class="table table-condensed">
            <!-- <t t-if=" Projectwbs &lt;&gt; line.project_wbs "> -->
             <!--  <t t-set="Projectwbs" t-value="line.project_wbs" /> -->
                <thead>
                    <tr>
                        <th><strong>Work Order</strong></th>
                        <th class="text-center"><strong>Project</strong></th> 
                        <th class="text-center"><strong>SubProject</strong></th> 
                        <th class="text-center"><strong>Project WBS</strong></th> 
                        <th class="text-center"><strong>Labour</strong></th>
                        <th class="text-center"><strong>Wo Qty.</strong></th>
                        <th class="text-center"><strong>Completed Qty.</strong></th>
                        <th class="text-center"><strong>Balance Qty.</strong></th>
                        <th class="text-center"><strong>Rate</strong></th>
                        <th class="text-center"><strong>Balance Amt.</strong></th>
                       
                    </tr>
                </thead>
               <!-- </t> -->
                <tbody>
                    <tr >
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.workorder_id"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.project_id"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.sub_project"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.project_wbs"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.labour_id"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.wo_qty"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.wo_completed"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.wo_balance"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.rate"/>
                        </td>
                        <td class="text-center" style="width:10%" >
                            <span t-field="line.bal_amount"/>
                        </td>
                        
                    </tr>
                </tbody>
            </table>
            
            <div class="oe_structure"/>
            </t>
        </div>
          </div>
    </t>
</template>


<template id="report_grn">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="pragtech_contracting.report_grn_document" />
        </t>
    </t>
</template>
</data>
</odoo>
